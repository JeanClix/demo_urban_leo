@model urban_leo.Models.Carrito

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Talla"></label>
        <input asp-for="Talla" class="form-control" />
        <span asp-validation-for="Talla" class="text-danger"></span>
        <input type="hidden" asp-for="Producto.Id" />
        <input type="hidden" asp-for="Talla" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>